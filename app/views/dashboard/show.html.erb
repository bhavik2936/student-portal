<% if user_signed_in? %>
  <h1>Greetings, <%=current_user.full_name%></h1>

  <% if current_user.admin? %>
    <p>Access <%= link_to "Student Dashboard", students_path %></p>
  <% else %>
    <p></p>
  <% end %>

  <%=link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete } %>
<% else %>
  <%=link_to "Sign Up", new_user_registration_path%> to access the portal or <%=link_to "Login", new_user_session_path%> if existing user.
<% end %>
